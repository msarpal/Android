<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:id="@+id/txvResult"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="100dp"
		android:textColor="#000"
		android:textSize="26sp"
		android:textStyle="normal"/>


	<ImageView
		android:id="@+id/btnSpeak"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="60dp"
		android:gravity="center"
		android:onClick="getSpeechInput"
		android:src="@drawable/ic_mic"/>

	<ImageView
		android:id="@+id/btn_record"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@null"
		android:elevation="0dp"
		android:paddingLeft="100dp"
		android:scaleType="fitCenter"
		android:src="@drawable/watson_logo"
		android:layout_marginTop="36dp"
		android:layout_below="@+id/txvResult"
		android:onClick="WatsonSTT"
		android:layout_toRightOf="@+id/txvResult"
		android:layout_toEndOf="@+id/txvResult" />

	<ImageView
		android:id="@+id/button1"
		android:layout_width="100dp"
		android:layout_height="100dp"

		android:layout_marginBottom="62dp"
		android:src="@drawable/bing-sign"
		android:layout_alignBottom="@+id/btnSpeak"
		android:layout_alignParentLeft="true"



		android:layout_alignParentStart="true" />


</RelativeLayout>
